<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">


	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource">
		<property name="url" value="jdbc:mysql://localhost:3306/shdb"></property>
		<property name="username" value="root"></property>
		<property name="password" value="123"></property>
	</bean>
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.MySQLDialect
				</prop>
			</props>
		</property>
		<property name="mappingResources">
			<list>
				<value>com/zml/shsite/models/Authority.hbm.xml</value>
				<value>com/zml/shsite/models/Goodtype.hbm.xml</value>
				<value>com/zml/shsite/models/Shrole.hbm.xml</value>
				<value>com/zml/shsite/models/Shuser.hbm.xml</value>
				<value>com/zml/shsite/models/Goodcomment.hbm.xml</value>
				<value>
					com/zml/shsite/models/Announcement.hbm.xml
				</value>
				<value>com/zml/shsite/models/Goodcollect.hbm.xml</value>
				<value>com/zml/shsite/models/Good.hbm.xml</value></list>
		</property></bean>
	<bean id="AuthorityDAO"
		class="com.zml.shsite.models.AuthorityDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="GoodtypeDAO" class="com.zml.shsite.models.GoodtypeDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="ShroleDAO" class="com.zml.shsite.models.ShroleDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="ShuserDAO" class="com.zml.shsite.models.ShuserDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="GoodcommentDAO"
		class="com.zml.shsite.models.GoodcommentDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="AnnouncementDAO"
		class="com.zml.shsite.models.AnnouncementDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="GoodcollectDAO"
		class="com.zml.shsite.models.GoodcollectDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="GoodDAO" class="com.zml.shsite.models.GoodDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean></beans>