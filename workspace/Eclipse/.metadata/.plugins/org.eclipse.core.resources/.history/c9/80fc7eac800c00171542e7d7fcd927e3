package com.zml.shsite.controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;

import com.zml.shsite.components.GoodNotFoundException;
import com.zml.shsite.components.GoodtypeNotFoundException;
import com.zml.shsite.models.Good;
import com.zml.shsite.services.IGoodService;
import com.zml.shsite.services.IGoodtypeService;
import com.zml.shsite.services.impl.GoodServiceImpl;
import com.zml.shsite.services.impl.GoodtypeServiceImpl;

@Controller
@RequestMapping("/Good")
public class GoodController {
	@Autowired
	private IGoodtypeService goodtypeServiceImpl=null;
	@Autowired
	private IGoodService goodServiceImpl=null;
	
	public String index(Model model){
		model.addAttribute("goods", goodServiceImpl.findAll());
		return "good/index";
	}
	
	@RequestMapping("/Browse")
	public String browse(Integer id,Model model){
		if(id==null){
			throw new GoodtypeNotFoundException();
		}
		model.addAttribute("goodTypes", goodtypeServiceImpl.findAll());
		model.addAttribute("goods", goodServiceImpl.findByGoodType(id));
		return "good/browse";
	}
	
	@RequestMapping("/Detail")
	public String detail(Integer id,Model model){
		if(id==null){
			throw new GoodNotFoundException();
		}
		Good good=null;
		model.addAttribute("goodTypes", goodtypeServiceImpl.findAll());
		model.addAttribute("good", goodServiceImpl.findById(id));
		return "good/detail";
	}
}
